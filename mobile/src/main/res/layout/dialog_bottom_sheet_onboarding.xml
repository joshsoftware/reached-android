<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#00000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:backgroundTint="#00000000"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:backgroundTint="#00000000"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerOnboarding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgSlider"
                app:layout_constraintBottom_toTopOf="@id/btnContinue"
                />
            <ImageView
                android:background="#00000000"
                android:id="@+id/imgSlider"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/slide_up"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                app:iconTint="@null"
                app:iconPadding="0dp"
                app:iconGravity="textEnd"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                app:icon="@drawable/ic_onboarding_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_onboarding_btn_bottom_margin"
                app:layout_constraintBottom_toTopOf="@id/dotsIndicator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:dotsCornerRadius="8dp"
                app:dotsColor="@color/onboarding_button_text_color"
                app:selectedDotColor="@color/onboarding_button_background_tint"
                app:dotsSize="12dp"
                app:dotsSpacing="4dp"
                app:progressMode="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>