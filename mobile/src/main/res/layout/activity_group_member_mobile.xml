<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/bottomAppBar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.GroupMemberActivity"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fabMenuLayout"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="@+id/add"
            app:layout_constraintEnd_toEndOf="@id/add"
            app:layout_constraintBottom_toTopOf="@+id/add"
            >
            <TextView
                android:id="@+id/leaveOrDeleteGroupLabel"
                android:text="@string/send_sos"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/fabLeave"
                app:layout_constraintTop_toTopOf="@id/fabLeave"
                app:layout_constraintBottom_toBottomOf="@id/fabLeave"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:src="@drawable/ic_sos"
                app:tint="@color/white"
                app:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@id/fabSos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/sosLabel"
                android:text="@string/send_sos"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/fabSos"
                app:layout_constraintTop_toTopOf="@id/fabSos"
                app:layout_constraintBottom_toBottomOf="@id/fabSos"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabSos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:src="@drawable/ic_sos"
                app:tint="@color/white"
                app:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@id/fabAdd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:text="@string/add_member"
                android:layout_marginEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/fabAdd"
                app:layout_constraintTop_toTopOf="@id/fabAdd"
                app:layout_constraintBottom_toBottomOf="@id/fabAdd"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:src="@drawable/ic_baseline_add_reaction_24"
                app:tint="@color/white"
                app:backgroundTint="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/add"
            android:layout_width="wrap_content"
            app:tint="@color/white"
            android:src="@drawable/ic_add"
            app:iconGravity="end"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom |right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toTopOf="@+id/showOnMapLayout"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/showOnMapLayout"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorOnPrimary"
                android:layout_margin="12dp"
                android:text="Show on map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/dialogLayout"
        android:alpha="0.1"
        android:visibility="gone"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>