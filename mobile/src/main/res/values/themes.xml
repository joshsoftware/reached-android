<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <item name="shapeAppearanceSmallComponent">@style/App.ShapeAppearance.SmallComponent</item>
        <item name="extendedFloatingActionButtonStyle">@style/App.ExtendedFab</item>
        <item name="fontFamily">@font/sora_regular</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>

    </style>
    <style name="LoginButton" parent="LoginComponent">
        <item name="cornerRadius">24dp</item>
    </style>
    <style name="LoginComponent">
        <item name="android:layout_marginStart">@dimen/login_component_margin</item>
        <item name="android:layout_marginEnd">@dimen/login_component_margin</item>
        <item name="android:layout_marginLeft">@dimen/login_component_margin</item>
        <item name="android:layout_marginRight">@dimen/login_component_margin</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/App.ShapeAppearance.SmallComponent</item>
        <item name="android:layout_height">@dimen/create_group_dialog_height</item>
    </style>

    <style name="CircularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>