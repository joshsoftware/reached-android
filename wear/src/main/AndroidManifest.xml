<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joshsoftware.reached">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.joshsoftware.reached.FamApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity android:name="com.joshsoftware.reached.ui.GroupWaitActivity"
            android:theme="@style/Theme.MyApplication"/>
        <activity android:name="com.joshsoftware.reached.ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.joshsoftware.reached.ui.MapActivity"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name="com.joshsoftware.reached.ui.GroupMemberActivity"
            android:theme="@style/Theme.MyApplication" />
        <activity
            android:name="com.joshsoftware.reached.ui.WearLoginActivity"
            android:theme="@style/Theme.MyApplication">
        </activity>

        <activity
            android:name="com.joshsoftware.reached.ui.WearGroupListActivity"
            android:theme="@style/Theme.MyApplication">

        </activity>

        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDacw9al4jpEeuFw4UxOaPSU4ON7a_gMjE" />

        <service
            android:name="com.joshsoftware.core.service.LocationUpdateService"
            android:enabled="true"
            android:exported="true"/>
    <service android:name=".service.ReachedWearFirebaseService"/>

    </application>

</manifest>