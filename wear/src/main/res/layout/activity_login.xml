<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:background="#2F2F15"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wear_background"
        />
    <TextView
        android:id="@+id/welcomeTextView"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/welcome_to"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/parent"/>
    <TextView
        android:id="@+id/titleTextView"
        android:textColor="#EFBD41"
        android:letterSpacing="0.5"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/parent"
        app:layout_constraintEnd_toEndOf="@id/parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeTextView"
        android:layout_marginTop="8dp"
        android:text="@string/reached"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/captionTextView"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/choose_your_google_account_nto_continue"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        />

    <ImageView
        android:id="@+id/btnGoogleSignIn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_login_with_google"
        app:layout_constraintBottom_toTopOf="@+id/captionTextView"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:visibility="visible"
        android:id="@+id/googleIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_google"
        app:layout_constraintBottom_toBottomOf="@id/btnGoogleSignIn"
        app:layout_constraintEnd_toEndOf="@id/btnGoogleSignIn"
        app:layout_constraintStart_toStartOf="@id/btnGoogleSignIn"
        app:layout_constraintTop_toTopOf="@id/btnGoogleSignIn"
        app:layout_constraintVertical_bias="0.43" />
</androidx.constraintlayout.widget.ConstraintLayout>