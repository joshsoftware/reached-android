<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="fontFamily">@font/sora_regular</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorOnSecondary</item>
        <item name="shapeAppearanceSmallComponent">@style/App.ShapeAppearance.SmallComponent</item>
        <item name="extendedFloatingActionButtonStyle">@style/App.ExtendedFab</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="ChoiceButton" parent="LoginComponent">
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="LoginButton" parent="LoginComponent">
        <item name="cornerRadius">24dp</item>
    </style>
    <style name="LoginComponent">
        <item name="android:layout_marginStart">@dimen/login_component_margin</item>
        <item name="android:layout_marginEnd">@dimen/login_component_margin</item>
        <item name="android:layout_marginLeft">@dimen/login_component_margin</item>
        <item name="android:layout_marginRight">@dimen/login_component_margin</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App.ShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="App.ExtendedFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>
</resources>